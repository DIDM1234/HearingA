<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HearingTest"
    tools:showIn="@layout/activity_hearing_test">
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/headphone" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|clip_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button33"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/button_circle"
                android:text="1"
                android:textColor="#079688"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button34"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/button_circle"
                android:text="2"
                android:textColor="#079688"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button35"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/button_circle"
                android:text="3"
                android:textColor="#079688"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button36"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/button_circle"
                android:text="4"
                android:textColor="#079688"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button37"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/button_circle"
                android:text="5"
                android:textColor="#079688"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button38"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/button_circle"
                android:text="6"
                android:textColor="#079688"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button39"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/button_circle"
                android:text="7"
                android:textColor="#079688"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button40"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/button_circle"
                android:text="8"
                android:textColor="#079688"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/okbutton"
        android:layout_width="161dp"
        android:layout_height="69dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_rounded"
        android:text="เริ่มทดสอบ"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_Header1_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />
</android.support.constraint.ConstraintLayout>